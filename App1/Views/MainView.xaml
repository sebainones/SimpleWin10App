<Page x:Name="MainPage" 
    x:Class="App1.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1.Views"
    xmlns:controls="using:AppStudio.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    xmlns:my="using:Microsoft.AdMediator.Universal" 
        
    xmlns:micro="using:Caliburn.Micro"
    xmlns:vm="using:App1.ViewModels"
    
    d:DesignWidth="680"
    d:DesignHeight="640"      
    mc:Ignorable="d"           
    MinWidth="680"
    MinHeight="740"        
    d:DataContext="{d:DesignInstance Type=vm:DesignMainViewModel, IsDesignTimeCreatable=True}"    
    micro:Bind.AtDesignTime="True">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="TextBlockStyle">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="BoldTextBlockStyle" BasedOn="{StaticResource TextBlockStyle}">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="HeaderTextBlockStyle" BasedOn="{StaticResource TextBlockStyle}">
            <Setter Property="FontSize" Value="24"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="PesosTextBlockStyle" BasedOn="{StaticResource TextBlockStyle}">
            <Setter Property="Text" Value="ARS"/>
        </Style>

        <Style TargetType="Image" x:Key="ImageStyle">
            <Setter Property="Width" Value="48"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="Border" x:Key="BorderStyle">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Page.Resources>

    <Grid Background="#FF24B2C9">

        <!--Hamburguer Button-->
        <StackPanel Orientation="Horizontal"  >
            <Button x:Name="HandlePane" VerticalAlignment="Top" HorizontalAlignment="Left" Height="48" Width="48"  Content="&#xE126;" FontFamily="Segoe UI Symbol"  ></Button>

            <TextBlock x:Name="Caption" Text="{Binding Caption}" VerticalAlignment="Top"  Margin="10,0,0,0" FontSize="36"></TextBlock>
        </StackPanel>

        <SplitView Margin="0,50,0,0" CompactPaneLength="48" OpenPaneLength="228" IsPaneOpen="{Binding IsPaneOpen}" PaneBackground="#FF0D95B4" DisplayMode="Inline" >
            <SplitView.Content >
                <StackPanel Orientation="Vertical" Margin="48,0,0,0">

                    <StackPanel Orientation="Horizontal">

                        <!--Dolar-Pesos-->
                        <Border Name="Dolar" Style="{StaticResource BorderStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Left"
                                       Text="Dolar $"  />

                                <Image Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource ImageStyle}"
                                       Source="ms-appx://App1/Resources/United_States.jpg"></Image>

                                <TextBlock x:Name="textBlockCompraLabel" Grid.Row="1" Grid.Column="0"  Margin="5"
                                           TextWrapping="Wrap" Text="Compra" />
                                <TextBlock x:Name="DolarCompra" Grid.Row="1" Grid.Column="1" Style="{StaticResource BoldTextBlockStyle}"                                           
                                           Text="{Binding DolarCompra}"/>

                                <TextBlock  Grid.Row="1" Grid.Column="2" Style="{StaticResource PesosTextBlockStyle}" />

                                <TextBlock x:Name="TextBlocVentaLabel"  Grid.Row="2" Grid.Column="0" Text="Venta" Style="{StaticResource TextBlockStyle}" />
                                <TextBlock x:Name="DolarVenta"  Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Style="{StaticResource BoldTextBlockStyle}" 
                                           Text="{Binding DolarVenta}"/>
                                <TextBlock  Grid.Row="2" Grid.Column="2" Style="{StaticResource PesosTextBlockStyle}"/>

                            </Grid>
                        </Border>

                        <!--Euro-Pesos-->
                        <Border Name="Euro" Style="{StaticResource BorderStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  Margin="5" HorizontalAlignment="Left"
                                        TextWrapping="Wrap" Text="Euro €" FontSize="24" />
                                <Image Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource ImageStyle}"
                                       Source="ms-appx://App1/Resources/Euro.png"></Image>


                                <TextBlock  Grid.Row="1" Grid.Column="0"  TextWrapping="Wrap" Text="Compra"  Margin="5"/>
                                <TextBlock x:Name="EuroCompra" Text="{Binding EuroCompra}" Grid.Row="1" Grid.Column="1" Style="{StaticResource BoldTextBlockStyle}" />
                                <TextBlock  Grid.Row="1" Grid.Column="2" Style="{StaticResource PesosTextBlockStyle}" />

                                <TextBlock Grid.Row="2" Grid.Column="0"   Text="Venta" TextWrapping="Wrap" Margin="5"/>
                                <TextBlock x:Name="EuroVenta"  Grid.Row="2" Grid.Column="1" 
                                           Style="{StaticResource BoldTextBlockStyle}" />
                                <TextBlock  Grid.Row="2" Grid.Column="2" Style="{StaticResource PesosTextBlockStyle}" />
                            </Grid>
                        </Border>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Stretch" >
                        <TextBlock Text="Última actualización:"  TextWrapping="Wrap" Margin="5" FontSize="18"/>
                        <TextBlock x:Name="LastUpdated"  TextWrapping="Wrap"  Margin="40,5,5,5" FontSize="18"
                                                   Text="{Binding LastUpdated}" />
                    </StackPanel>

                    <Border Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                            BorderThickness="2" BorderBrush="Red" CornerRadius="3" Padding="10">
                        <my:AdMediatorControl  Background="DarkOrange" />
                    </Border>
                </StackPanel>
            </SplitView.Content>
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3.5*"/>

                    </Grid.ColumnDefinitions>
                    <Button x:Name="ShowAbout" Grid.Row="0" Grid.Column="0" Height="48" Width="48" VerticalAlignment="Top">
                        <FontIcon FontFamily="Segoe UI Symbol" Glyph="&#x2148;" />
                    </Button>
                    <TextBlock Text="Información" Grid.Row="0" Grid.Column="1" FontSize="32" VerticalAlignment="Top"></TextBlock>
                </Grid>

            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>
