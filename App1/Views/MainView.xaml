<Page xmlns:my="using:Microsoft.AdMediator.Universal" 
    x:Class="App1.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1.Views"
    xmlns:controls="using:AppStudio.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >

    <Grid Background="LightGreen">

        <!--Hamburguer Button-->
        <StackPanel Orientation="Horizontal"  >
            <Button x:Name="HandlePane" VerticalAlignment="Top" HorizontalAlignment="Left" Height="48" Width="48"  Content="&#xE126;" FontFamily="Segoe UI Symbol" ></Button>

            <TextBlock x:Name="Caption" VerticalAlignment="Top"  Margin="10,0,0,0" FontSize="34"></TextBlock>
        </StackPanel>


        <SplitView Margin="0,50,0,0"  DisplayMode="Inline" CompactPaneLength="50" OpenPaneLength="50" IsPaneOpen="{Binding IsPaneOpen}" PaneBackground="Green">
            <SplitView.Content>
                <StackPanel Orientation="Vertical" Margin="38,0,0,0">

                    <StackPanel Orientation="Horizontal">

                        <Border Name="Dolar" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                            BorderThickness="2" BorderBrush="Black" CornerRadius="3" Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Center"
                                        TextWrapping="Wrap" Text="Dolar $"  FontSize="24"/>

                                <TextBlock x:Name="textBlockCompraLabel" Grid.Row="1" Grid.Column="0"  Margin="5"
                                           TextWrapping="Wrap" Text="Compra" />
                                <TextBlock x:Name="Compra" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Margin="5"/>
                                <TextBlock  Grid.Row="1" Grid.Column="2" Margin="5"
                                        TextWrapping="Wrap" Text="ARS" />

                                <TextBlock x:Name="TextBlocVentaLabel"  Grid.Row="2" Grid.Column="0"   Text="Venta" TextWrapping="Wrap" Margin="5"/>
                                <TextBlock x:Name="Venta"  Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap"  Margin="5"/>
                                <TextBlock  Grid.Row="2" Grid.Column="2" Margin="5"
                                        TextWrapping="Wrap" Text="ARS" />
                                
                            </Grid>
                        </Border>

                        <Border Name="Euro" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                            BorderThickness="2" BorderBrush="Black" CornerRadius="3" Padding="10" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  Margin="5" HorizontalAlignment="Center"
                                        TextWrapping="Wrap" Text="Euro €" FontSize="24" />

                                <TextBlock  Grid.Row="1" Grid.Column="0"  TextWrapping="Wrap" Text="Compra"  Margin="5"/>
                                <TextBlock x:Name="EuroCompra" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Margin="5"/>
                                <TextBlock  Grid.Row="1" Grid.Column="2" Margin="5"
                                        TextWrapping="Wrap" Text="ARS" />

                                <TextBlock Grid.Row="2" Grid.Column="0"   Text="Venta" TextWrapping="Wrap" Margin="5"/>
                                <TextBlock x:Name="EuroVenta"  Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="5"  />
                                <TextBlock  Grid.Row="2" Grid.Column="2" Margin="5"
                                        TextWrapping="Wrap" Text="ARS" />
                            </Grid>
                        </Border>

                        <TextBlock Text="Última actualización" TextWrapping="Wrap" Margin="5"/>
                        <TextBlock x:Name="LastUpdated" HorizontalAlignment="Left" TextWrapping="Wrap"  Margin="5"/>

                    </StackPanel>

                    <Border Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                            BorderThickness="2" BorderBrush="Red" CornerRadius="3" Padding="10">
                        <my:AdMediatorControl  Background="DarkOrange"/>
                    </Border>
                </StackPanel>
            </SplitView.Content>
            <SplitView.Pane>
                <Button x:Name="ShowAbout" Height="48" Width="48">
                    <FontIcon FontFamily="Segoe UI Symbol" Glyph="&#x2148;" />
                </Button>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>
